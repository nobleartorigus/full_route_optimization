<h1>LAVSSDS</h1>

<div class="row">
    {{#each Associates }}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{address}}, {{CP}}, {{lat}}, {{lon}} 
                </h4>
                <p>{{description}}</p>
                <form action="/associates/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-block btn-sm">
                        Delete
                    </button>
                </form>
            </div>
        </div></br>
    </div>
    {{/each}}
</div>